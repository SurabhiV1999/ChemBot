{
	"info": {
		"_postman_id": "chembot-api-collection",
		"name": "ChemBot API Collection",
		"description": "Complete API collection for ChemBot - Educational Content Q&A Platform",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		},
		{
			"key": "content_id",
			"value": "",
			"type": "string"
		},
		{
			"key": "user_id",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set('token', jsonData.access_token);",
									"    pm.collectionVariables.set('user_id', jsonData.user.id);",
									"    console.log('Token saved:', jsonData.access_token);",
									"    console.log('User ID saved:', jsonData.user.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Test Student\",\n  \"email\": \"student@test.com\",\n  \"password\": \"password123\",\n  \"role\": \"student\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/register",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "register"]
						},
						"description": "Register a new user (student or teacher)"
					},
					"response": []
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set('token', jsonData.access_token);",
									"    pm.collectionVariables.set('user_id', jsonData.user.id);",
									"    console.log('Token saved:', jsonData.access_token);",
									"    console.log('User ID saved:', jsonData.user.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"student@test.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "login"]
						},
						"description": "Login and get JWT token"
					},
					"response": []
				},
				{
					"name": "Get Current User",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/me",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "me"]
						},
						"description": "Get current logged-in user details"
					},
					"response": []
				}
			]
		},
		{
			"name": "Content Management",
			"item": [
				{
					"name": "Upload Content (PDF/Text)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set('content_id', jsonData.content_id);",
									"    console.log('Content ID saved:', jsonData.content_id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": "/path/to/your/document.pdf",
									"description": "Upload PDF, TXT, DOCX, or MD file"
								},
								{
									"key": "title",
									"value": "Chemistry Chapter 1",
									"type": "text"
								},
								{
									"key": "subject",
									"value": "Chemistry",
									"type": "text"
								},
								{
									"key": "description",
									"value": "Introduction to Chemistry",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/api/content/upload",
							"host": ["{{base_url}}"],
							"path": ["api", "content", "upload"]
						},
						"description": "Upload educational content (PDF/text file). Supports PDF, TXT, DOCX, MD files up to 10MB."
					},
					"response": []
				},
				{
					"name": "Get All Content",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/content/?limit=10&offset=0",
							"host": ["{{base_url}}"],
							"path": ["api", "content", ""],
							"query": [
								{
									"key": "limit",
									"value": "10"
								},
								{
									"key": "offset",
									"value": "0"
								}
							]
						},
						"description": "Get all content uploaded by current user"
					},
					"response": []
				},
				{
					"name": "Get Content by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/content/{{content_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "content", "{{content_id}}"]
						},
						"description": "Get specific content details"
					},
					"response": []
				},
				{
					"name": "Get Content Status",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/content/{{content_id}}/status",
							"host": ["{{base_url}}"],
							"path": ["api", "content", "{{content_id}}", "status"]
						},
						"description": "Check processing status of uploaded content"
					},
					"response": []
				},
				{
					"name": "Delete Content",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/content/{{content_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "content", "{{content_id}}"]
						},
						"description": "Delete content and all associated data"
					},
					"response": []
				}
			]
		},
		{
			"name": "Questions & Answers",
			"item": [
				{
					"name": "Ask Question (Non-Streaming)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"question\": \"What is photosynthesis?\",\n  \"stream\": false\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/content/{{content_id}}/question",
							"host": ["{{base_url}}"],
							"path": ["api", "content", "{{content_id}}", "question"]
						},
						"description": "Ask a question about specific content. Returns complete answer with sources and confidence score."
					},
					"response": []
				},
				{
					"name": "Ask Question (Streaming)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"question\": \"Explain the process of cellular respiration?\",\n  \"stream\": true\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/content/{{content_id}}/question",
							"host": ["{{base_url}}"],
							"path": ["api", "content", "{{content_id}}", "question"]
						},
						"description": "Ask a question with streaming response (Server-Sent Events)"
					},
					"response": []
				},
				{
					"name": "Ask Question (Clear History)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"question\": \"What is DNA?\",\n  \"stream\": false,\n  \"clear_history\": true\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/content/{{content_id}}/question",
							"host": ["{{base_url}}"],
							"path": ["api", "content", "{{content_id}}", "question"]
						},
						"description": "Ask a question and clear conversation history (start fresh)"
					},
					"response": []
				},
				{
					"name": "Get All Questions for Content",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/content/{{content_id}}/questions?limit=50",
							"host": ["{{base_url}}"],
							"path": ["api", "content", "{{content_id}}", "questions"],
							"query": [
								{
									"key": "limit",
									"value": "50"
								}
							]
						},
						"description": "Get all questions asked about a specific content"
					},
					"response": []
				}
			]
		},
		{
			"name": "Analytics",
			"item": [
				{
					"name": "Get Student Analytics",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/analytics/student/{{user_id}}?days=30",
							"host": ["{{base_url}}"],
							"path": ["api", "analytics", "student", "{{user_id}}"],
							"query": [
								{
									"key": "days",
									"value": "30",
									"description": "Number of days to analyze (default: 30)"
								}
							]
						},
						"description": "Get learning analytics for a student including:\n- Total contents\n- Total questions\n- Questions per content\n- Average confidence score\n- Helpful responses percentage\n- Questions last 7/30 days"
					},
					"response": []
				},
				{
					"name": "Get Content Analytics",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/analytics/content/{{content_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "analytics", "content", "{{content_id}}"]
						},
						"description": "Get analytics for specific content including:\n- Total questions\n- Unique users\n- Most asked question types\n- Average response time\n- Average confidence score\n- Question frequency\n- Peak usage times"
					},
					"response": []
				},
				{
					"name": "Get Popular Questions",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/analytics/content/{{content_id}}/popular-questions?limit=10",
							"host": ["{{base_url}}"],
							"path": ["api", "analytics", "content", "{{content_id}}", "popular-questions"],
							"query": [
								{
									"key": "limit",
									"value": "10"
								}
							]
						},
						"description": "Get most asked questions for specific content with frequency count"
					},
					"response": []
				},
				{
					"name": "Get Response Time Analytics",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/analytics/response-times?content_id={{content_id}}&days=30",
							"host": ["{{base_url}}"],
							"path": ["api", "analytics", "response-times"],
							"query": [
								{
									"key": "content_id",
									"value": "{{content_id}}",
									"description": "Optional: filter by content ID"
								},
								{
									"key": "days",
									"value": "30"
								}
							]
						},
						"description": "Get response time analytics including:\n- Average response time\n- Min/Max response times\n- Total questions\n- Cache hit rate"
					},
					"response": []
				},
				{
					"name": "Get Dashboard Stats",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/analytics/dashboard",
							"host": ["{{base_url}}"],
							"path": ["api", "analytics", "dashboard"]
						},
						"description": "Get dashboard statistics for current user"
					},
					"response": []
				},
				{
					"name": "Get Leaderboard (Teacher Only)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/analytics/leaderboard?limit=10",
							"host": ["{{base_url}}"],
							"path": ["api", "analytics", "leaderboard"],
							"query": [
								{
									"key": "limit",
									"value": "10"
								}
							]
						},
						"description": "Get student engagement leaderboard (teachers only)"
					},
					"response": []
				}
			]
		}
	]
}

